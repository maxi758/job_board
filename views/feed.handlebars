<div>
  <a class=" btn btn-outline-primary mb-3" href="/add">Agrega una nueva publicacion</a>
</div>
{{#each publications}}
<div class="card  bg-light text-black border-dark mb-3">
  <div class="card-header">
    <div class="dropdown text-end">
      <button class="btn btn-secondary " type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
       <i class="fas fa-ellipsis-h"></i>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        {{#ifEquals this.author.user ../username }}        
        <li><a class="dropdown-item" href="/editForm/{{_id}}">Editar</a></li>
        <li><a class="dropdown-item" href="/delete/{{_id}}">Borrar</a></li>
        {{/ifEquals}}
        <li><a class="dropdown-item" href="#"></a></li>
      </ul>
    </div>
   
  </div>
  <div class="card flex-row flex-wrap border-dark p-2">
    <div "card-header  border-dark mx-3">
      <img src="/img/{{this.author.img}}" class="rounded-circle " alt="imagen de {{username}}">     
    </div> 
    <div class="card-block px-2 border-dark">
      <h5 class="ms-2">{{this.author.user}}</h5>
      <h6 class="ms-2">{{this.date}}</h6>
      
    </div>
    <hr class="border-primary w-100">
    <div class="w-100"></div>
    <div class="card-body border-dark bg-ligth">
      <span class="border-dark" id="showPublication">{{this.contenido}}</span>
    </div>
       
  </div>
</div>
{{/each}}